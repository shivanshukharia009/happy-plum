* {
    padding: 0;
    margin: 0;
}

.header {
    min-height: 100vh;
    width: 100%;
    background-image: linear-gradient(rgba(4, 9, 30, 0.7), rgba(4, 9, 30, 0.7)), url(<%= asset_path('ed_tech.jpg') %>);
    background-position: center;
    background-size: cover;
    position: relative;
}

nav {
    display: flex;
    padding: 2% 6%;
    justify-content: space-between;
    align-items: center;
}

nav img {
    width: 150px;

}

.nav-links {
    flex: 1;
    text-align: right;
}

.nav-links ul li {
    list-style: none;
    display: inline-block;
    padding: 8px 12px;
    position: relative;
}

.nav-links ul li a {
    color: #fff;
    text-decoration: none;
    font-size: 13px;
}

.nav-links ul li::after {
    content: '';
    width: 0%;
    height: 2px;
    background: #f44336;
    display: block;
    margin: auto;
    transition: 0.5s;
}

.nav-links ul li:hover:after {

    width: 100%;
}

.text-box {
    width: 90%;
    color: rgb(255, 255, 255);
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
}

.text-box h1 {
    font-size: 62px;
}

.text-box p {
    margin: 10px 0 40px;
    font-size: 25px;
    columns: #fff;
    color: rgb(255, 255, 255);
}

.hero-btn {
    display: inline-block;
    text-decoration: none;
    color: #fff;
    border: 1px solid #fff;
    padding: 12px 34px;
    font-size: 13px;
    background: transparent;
    position: relative;
    cursor: pointer;
    margin: 20px;
}

.hero-btn:hover {
    border: 1px solid #f44336;
    background: #f44336;
    transition: 1s;
}

nav .fa {
    display: none;
}

@media(max-width:700px) {
    .text-box h1 {
        font-size: 20px;
    }

    .nav-links ul li {
        display: block;
    }

    .nav-links {
        position: absolute;
        background: #f44336;
        height: 100vh;
        width: 200px;
        top: 0;
        right: -200px;
        text-align: left;
        z-index: 2;
        transition: 1s;

    }

    nav .fa {
        display: block;
        columns: #fff;
        margin: 10px;
        font-size: 22px;
        cursor: pointer;
    }

    .nav-links ul {
        padding: 30px;
    }
}

.text-box-info {
    color: #fff;
}

/*--About us----*/
.about-us {
    width: 80%;
    margin: auto;
    text-align: center;
    padding-top: 20px;
    margin-top: 65px;
}

h1 {
    font-family: 36px;
    font-weight: 600;
    margin-bottom: 65px;
}

p {
    color: #777;
    font-size: 17px;
    font-weight: 300;
    line-height: 22px;
    padding: 10px;
}

.row {
    margin-top: 2%;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
}

.team-member {
    display: flex;
    align-items: center;
    margin-bottom: 40px;
    background: #fff3f3;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 0 20px 0px rgba(0, 0, 0, 0.1);
}

.team-member .image {
    flex: 1;
    text-align: center;
}

.team-member .description {
    flex: 2;
    text-align: left;
    padding-left: 20px;
}

.team-img {
    width: 100%;
    max-width: 300px;
    border-radius: 10px;
}

h3 {
    font-weight: 600;
    margin: 10px 0;
}

a {
    color: #007bff;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

@media(max-width:700px) {
    .row {
        flex-direction: column;
    }
}

/*--testimonials--*/
.testimonials {
    width: 80%;
    margin: auto;
    text-align: center;
}

.testimonials h1 {
    margin-bottom: 20px;
}

.row {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 20px;
}

.testimonials-col {
    flex: 0 1 calc(25% - 20px);
    border-radius: 10px;
    text-align: left;
    background: #fff3f3;
    padding: 25px;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    height: 100%;
}

.testimonials-col img {
    height: 40px;
    margin-bottom: 15px;
    border-radius: 50%;
}

.testimonials-col p {
    padding: 0;
    text-align: left;
    flex-grow: 1;
    overflow: hidden;
}

.testimonials-col h3 {
    margin-top: 15px;
    text-align: left;
}

.testimonials-col .fa {
    color: #f44336;
}

.row {
    display: flex;
    align-items: stretch;
    flex-wrap: wrap;
    justify-content: space-between;
}

@media (max-width: 1200px) {
    .testimonials-col {
        flex: 0 1 calc(33.333% - 20px);
    }
}

@media (max-width: 900px) {
    .testimonials-col {
        flex: 0 1 calc(50% - 20px);
    }
}

@media (max-width: 600px) {
    .testimonials-col {
        flex: 0 1 100%;
    }
}

.social-icon {
    padding: 10px;
}

.container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
  padding: 20px;
  background-color: black;
  border-top: 1px solid black;
}

.contact-footer {
  background-color: #333;
  color: #fff;
  padding: 40px 0;
  margin-top: 65px;
}

.contact-footer .container {
  max-width: 1200px;
  margin: auto;
}

.contact-footer h2, .contact-footer h3 {
  margin-bottom: 20px;
  color: #fff;
}

.contact-footer .left-side,
.contact-footer .right-side {
  flex: 1;
  padding: 20px;
}

.contact-footer .left-side form {
  display: flex;
  flex-direction: column;
}

.contact-footer .input-box {
  margin-bottom: 15px;
}

.contact-footer .input-box input,
.contact-footer .input-box textarea {
  width: 100%;
  padding: 10px;
  border: none;
  border-radius: 5px;
  outline: none;
}

.contact-footer .input-box button {
  padding: 10px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.contact-footer .input-box button:hover {
  background-color: #0056b3;
}

.contact-footer .right-side {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.contact-footer .contact-info p,
.contact-footer .social-media a {
  margin-bottom: 10px;
  color: #fff;
}

.contact-footer .contact-info p i,
.contact-footer .social-media a i {
  margin-right: 10px;
}

.contact-footer .social-media a {
  text-decoration: none;
  color: #fff;
}

.contact-footer .social-media a:hover {
  color: #007bff;
}

@media (max-width: 768px) {
  .contact-footer .container {
    flex-direction: column;
  }

  .contact-footer .left-side,
  .contact-footer .right-side {
    padding: 10px;
  }
}
